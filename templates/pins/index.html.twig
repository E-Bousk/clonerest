{% extends 'layouts/base.html.twig' %}

{% block title 'Find the best pins on earth !' %}

{% block body %}
    <h1>{{ pluralize(pins|length, 'Pin') }}</h1>

    {% for pin in pins %}
        <article>
            <h2><a href="{{ path('pins.show', {id: pin.id}) }}">{{ pin.title }}</a></h2>
            <p>{{ pin.description|u.truncate(15, '...', false) }}</p>
            <p>Submitted {{ pin.createdAt|ago }}</p>
        </article>
    {% endfor %}
{% endblock %}
