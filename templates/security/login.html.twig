{% extends 'layouts/base.html.twig' %}

{% block title 'Logging in...' %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="mt-5 mb-3 text-center">Please sign in</h1>
        <p class="mb-5 text-center text-muted">Pins are waiting for you ðŸ˜‰</p>
        <form method="post">
            {% if error %}
                <div class="alert alert-error rounded mb-3" role="alert">{{ error.messageKey|trans(error.messageData, 'securitytoto') }}</div>
            {% endif %}
            {# {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %} #}
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                        <label class="form-check-label" for="remember_me">
                            Remember me
                        </label>
                    </div>
                </div>
                <a href="{{ path('app_forgot_password_request') }}">Password forgotten ?</a>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="mt-3 btn btn-block btn-lg btn-primary" type="submit">
                Sign in
            </button>
            <p class="mt-5 mb-3 text-center text-muted">Not registered yet ? <a href="{{ path('app_register') }}">Create an account !</a></p>
        </form>
    </div>
</div>
{% endblock %}
